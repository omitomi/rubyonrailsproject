<%= form_for(@type) do |f| %>
  <%= render 'shared/error_messages', object: @type %>

  <div class="field">
    <%= f.label :name, "Наименование" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, "Описание" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>
