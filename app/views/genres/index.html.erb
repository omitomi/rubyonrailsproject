<h1>Список жанров</h1>

<table>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Подробнее', genre %></td>
        <% if signed_in? && current_user.admin? %>
            <td><%= link_to 'Редактировать', edit_genre_path(genre) %></td>
            <td><%= link_to 'Удалить', genre, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if signed_in? && current_user.admin? %>
    <%= link_to 'Создать новый жанр', new_genre_path %>
<% end %>

