<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "fantlib", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Главная", root_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Книги", books_path %></li>
            <li><%= link_to "Все пользователи", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Аккаунт <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Профиль", current_user %></li>
                <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Выйти", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Войти", signin_path %></li>
          <% end %>
          <% if signed_in? && current_user.admin? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Управление <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Страны", countries_path %></li>
                  <li><%= link_to "Авторы", authors_path %></li>
                  <li><%= link_to "Категория", types_path %></li>
                  <li><%= link_to "Жанры", genres_path %></li>
                  <li><%= link_to "Место действия", scene_of_actions_path %></li>
                  <li><%= link_to "Сюжетный ход", plots_path %></li>
                  <li><%= link_to "Линейность", linearities_path %></li>
                </ul>
              </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>