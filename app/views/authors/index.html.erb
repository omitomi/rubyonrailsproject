<h1>Список авторов</h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th></th>
      <% if signed_in? && current_user.admin? %>
          <th></th>
          <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to 'Показать', author %></td>
        <% if signed_in? && current_user.admin? %>
            <td><%= link_to 'Редактировать', edit_author_path(author) %></td>
            <td><%= link_to 'Удалить', author, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if signed_in? && current_user.admin? %>
    <%= link_to 'Создать нового автора', new_author_path %>
<% end %>

