<%= form_for(@author) do |f| %>
  <%= render 'shared/error_messages', object: @author %>

  <div class="field">
    <%= f.label :name, "Имя" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :countries_id, "Страна" %><br>
    <%= f.select :countries_id, options_from_collection_for_select(Country.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :biography, "Биография" %><br>
    <%= f.text_area :biography %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>
