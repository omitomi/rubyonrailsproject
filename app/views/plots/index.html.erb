<h1>Список сюжетных ходов</h1>

<table>
  <tbody>
    <% @plots.each do |plot| %>
      <tr>
        <td><%= plot.name %></td>
        <% if current_user.admin? %>
            <td><%= link_to 'Редактировать', edit_plot_path(plot) %></td>
            <td><%= link_to 'Удалить', plot, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if signed_in? && current_user.admin? %>
    <%= link_to 'Создать новый', new_plot_path %>
<% end %>

