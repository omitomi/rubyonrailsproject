<h1>Линейность сюжета</h1>

<table>

  <tbody>
    <% @linearities.each do |linearity| %>
      <tr>
        <td><%= linearity.name %></td>
        <% if current_user.admin? %>
            <td><%= link_to 'Редактировать', edit_linearity_path(linearity) %></td>
            <td><%= link_to 'Удалить', linearity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
    <%= link_to 'Создать', new_linearity_path %>
<%end%>
