<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
  <div class="span8">
    <h3>Добавленные книги</h3>
    <% if @feed_items.count > 0 && @feed_items.any? %>
        <ol class="microposts">
          <%= render partial: 'shared/feed_item', collection: @feed_items %>
        </ol>
    <% end %>
    <!--%= render 'shared/feed' %-->
  </div>
  <div class="span8">
      <h3>Оставленные отзывы</h3>
      <% if @comment_user.count > 0 && @comment_user.any? %>
          <ol class="microposts">
            <%= render partial: 'shared/comment_user', collection: @comment_user %>
          </ol>
      <% end %>
      <!--%= render 'shared/feed' %-->
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Добро пожаловать в fantlab!</h1>

    <%= link_to "Зарегистрироваться!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>